{
  "name": "@fanaticofc/chester",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Fernando Barros",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && webpack --env.NODE_ENV=production --mode production",
    "start": "yarn lint && webpack-dev-server --host 0.0.0.0 --env.NODE_ENV=staging --mode development --hot",
    "lint": "eslint './src/**/*.{tsx,ts}'",
    "relay": "relay-compiler --artifactDirectory ./src/__generated__ --language typescript --src ./src --schema ./schema.graphql --extensions ts tsx --noFutureProofEnums",
    "schema": "get-graphql-schema http://localhost:3333/graph > schema.graphql",
    "audit-dependencies": "audit-ci --config audit-ci.json",
    "test": "jest --forceExit --detectOpenHandles --coverage",
    "sonar": "sonarqube-verify",
    "start-local-sonarqube": "docker-compose -f docker-compose.sonar.yml up -d",
    "stop-local-sonarqube": "docker-compose -f docker-compose.sonar.yml down"
  },
  "dependencies": {
    "@captalys-platform/core": "1.19.11",
    "@captalys-platform/relay": "0.10.40",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-relay": "^10.0.1",
    "react-router-dom": "^5.2.0",
    "relay-runtime": "^10.0.1",
    "styled-components": "^5.1.1",
    "tslib": "^2.0.0",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-relay": "^7.0.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/relay-runtime": "^10.0.2",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.4.0",
    "audit-ci": "^3.0.1",
    "dotenv-webpack": "2.0.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-sonarjs": "^0.5.0",
    "get-graphql-schema": "2.1.2",
    "git-revision-webpack-plugin": "^3.0.6",
    "html-webpack-plugin": "4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier-eslint": "^11.0.0",
    "relay-compiler": "10.0.1",
    "relay-compiler-language-typescript": "13.0.1",
    "sonarqube-scanner": "^2.6.0",
    "sonarqube-verify": "^1.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.5",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "engines": {
    "node": "12.x.x"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
